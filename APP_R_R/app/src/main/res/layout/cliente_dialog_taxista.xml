<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="305dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:drawable/editbox_background_normal"
    android:gravity="center"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solicitar el servicio de Taxi"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="El hotel cuenta con servicio de Taxi, si deseas obtener este servicio por favor darle a 'Solicitar Servicio', a penas se acepte en 'Mis Reservas' se habilitará la opción de 'Solicitar Taxi'"
        android:textSize="14sp"
        android:textColor="#757575"
        android:gravity="center"
        android:layout_marginTop="8dp" />
    <Button
        android:id="@+id/btn_aceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solicitar Servicio"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/dorado"
        android:layout_gravity="center" />
</LinearLayout>
