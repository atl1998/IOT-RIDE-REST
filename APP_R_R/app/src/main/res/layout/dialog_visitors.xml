<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Sección Adultos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Adultos"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnMenosAdultos"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/remove_24dp_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAdultos"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="16sp"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btnMasAdultos"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/add_24dp_black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Sección Niños -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Niños"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnMenosNinos"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/remove_24dp_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNinos"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="16sp"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btnMasNinos"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/add_24dp_black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Botón de Aceptar -->
    <Button
        android:id="@+id/btnAceptar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:backgroundTint="@color/dorado"
        android:textColor="#FFFFFF" />

</LinearLayout>