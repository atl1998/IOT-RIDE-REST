<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titulo_habitacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Habitacion Estandar"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cantidad"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginEnd="16dp" />

            <Button
                android:id="@+id/decrementar_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/remove_24dp_dark" />

            <TextView
                android:id="@+id/cantidad_textview"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:gravity="center"
                android:textSize="18sp" />

            <Button
                android:id="@+id/incrementar_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/add_24dp_black"  />
        </LinearLayout>

        <TextView
            android:id="@+id/precio_total_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio total: S/354.00"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/confirmar_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar"
            android:textAllCaps="false"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</LinearLayout>
