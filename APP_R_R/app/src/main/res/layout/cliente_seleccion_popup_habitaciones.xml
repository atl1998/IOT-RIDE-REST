<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/titulo_habitacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Habitacion Estandar"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NÃºmero de unidades"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginRight="18dp"/>

            <Button
                android:id="@+id/decrementar_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="-"
                android:textSize="24sp"
                android:backgroundTint="@android:color/white"
                android:background="@drawable/remove_24dp_dark"/>

            <TextView
                android:id="@+id/cantidad_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:gravity="center"/>

            <Button
                android:id="@+id/incrementar_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"
                android:textSize="24sp"
                android:backgroundTint="@android:color/white"
                android:background="@drawable/add_24dp_black"/>
        </LinearLayout>

        <TextView
            android:id="@+id/precio_total_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio total: S/354.00"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/confirmar_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textSize="16sp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>