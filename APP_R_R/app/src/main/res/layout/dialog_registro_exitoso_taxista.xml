<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@android:drawable/editbox_background_normal"
    android:gravity="center"
    android:padding="24dp"
    android:orientation="vertical">

    <!-- Ícono de éxito -->
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/taxista_icon"
        android:layout_gravity="center" />

    <!-- Título del registro exitoso centrado -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Registro Exitoso como Taxista!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:textColor="#000000"
        android:gravity="center" />  <!-- Texto centrado -->

    <!-- Descripción sobre la revisión por parte del superadministrador centrada -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tu solicitud está en revisión por el superadministrador. \nPronto recibirás una notificación sobre el acceso a la aplicación."
        android:textSize="14sp"
        android:textColor="#757575"
        android:gravity="center"
        android:layout_marginTop="8dp" />
</LinearLayout>
